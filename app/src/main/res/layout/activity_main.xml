<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/sale_category_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F00"
            android:layout_margin="15dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:padding="2dp"
                android:text="Last days of sale"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t1"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:padding="2dp"
                android:text="70% off everything"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="2dp"
                android:text="Exclusively online"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:padding="4dp"
                android:text="Offer valid exclusively online on all sale items for a limited time only"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_forward" />

        </RelativeLayout>

        <TextView
            android:id="@+id/women_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="Women"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/men_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="Men"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kids_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="Kids"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/baby_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="Baby"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shoe_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="Shoes"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sale_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:padding="12dp"
            android:text="Sale"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_margin="15dp"
            android:background="@drawable/ih2">

            <TextView
                android:id="@+id/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/h2"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="In bloom this winter"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:padding="10dp"
                android:text="Romantic dresses, blouses &amp; skirts in vivid, any season floral prints"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_margin="15dp"
            android:background="@drawable/ih1">

            <TextView
                android:id="@+id/hh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/hh2"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="Dive into better denim"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/hh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:padding="10dp"
                android:text="Romantic dresses, blouses &amp; skirts in vivid, any season floral prints"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
